{
    "name": "scalio-buildhero-platform",
    "version": "0.0.0",
    "description": "Build Hero Frontend",
    "author": "scalio",
    "private": true,
    "scripts": {
        "postinstall": "husky install",
        "ng": "ng",
        "build": "ng build",
        "start": "ng serve",
        "start:mock-server": "json-server mock-server/mock-database.json --port 5005",
        "watch": "ng build --watch --configuration development",
        "format": "prettier --write  \"./src/**/*.{ts,html}\"",
        "lint": "ng lint --fix",
        "e2e": "ng e2e",
        "test": "cypress open",
        "test:headless": "cypress run --headless"
    },
    "devDependencies": {
        "@badeball/cypress-cucumber-preprocessor": "^18.0.6",
        "@cypress/browserify-preprocessor": "^3.0.2",
        "@types/node": "^20.4.1",
        "cypress": "^12.17.3",
        "husky": "^8.0.1",
        "prettier": "^2.7.1",
        "typescript": "~4.8.4"
    }
}
